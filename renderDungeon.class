import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Image;
import java.awt.image.BufferedImage;
import java.awt.Toolkit;
import javax.swing.JComponent;
import javax.swing.JFrame;
import java.io.File;
import java.io.IOException;
import javax.imageio.ImageIO;

class renderDungeon extends JComponent{
	int[][] dungeonFloor;
	public renderDungeon(int[][] a){
		dungeonFloor = a;
	}
	public void paint(Graphics g){
		Image tileFloor = Toolkit.getDefaultToolkit().getImage("tileFloor.png");//grab image files
		Image tileWall = Toolkit.getDefaultToolkit().getImage("tileWall.png");
		Image tileStairs = Toolkit.getDefaultToolkit().getImage("tileStairs.png");
		for(int i=0;i<dungeonFloor.length;i++){//for entire dungeon
			for(int j=0;j<dungeonFloor[0].length;j++){
				if(dungeonFloor[i][j]==1){//if floor
					g.drawImage(tileFloor,30+(32*j),30+(32*i),null);//print floor in appropriate location
				}
				if(dungeonFloor[i][j]==0){//if wall
					g.drawImage(tileWall,30+(32*j),30+(32*i),null);//print wall
				}
				if(dungeonFloor[i][j]==2){//if stairs
					g.drawImage(tileStairs,30+(32*j),30+(32*i),null);//print stairs
				}
			}
		}
	}
}
